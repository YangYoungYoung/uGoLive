/* pages/login/login.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 204rpx;
  height: 198rpx;
  margin-top: 64rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.inputView {
  width: 100%;
  margin-top: 64rpx;
  background-color: #fff;
  line-height: 44px;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  font-size: 36rpx;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 32rpx;
  width: 42rpx;
  height: 48rpx;
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px;
}

.inputText {
  margin-left: 16rpx;
  flex: block;
  float: right;
  text-align: left;
  margin-right: 22px;
  margin-top: 11px;
  color: #545454;
  font-size: 14px;
  width: 600rpx;
}

.line {
  width: 686rpx;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
  align-items: center;
}

/*按钮*/

.loginBtnView {
  width: 100%;
  height: auto;
  /* background-color: #f2f2f2; */
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
  
}

.loginBtn {
  width: 80%;
  margin-top: 88rpx;
  background-color: #E83D2C;
  color: #FBFBFB;
  font-size: 36rpx;
}

.btn{
  
 width: 80%;
  margin-top: 88rpx;
  background-color: #fc8901;
  color: #FBFBFB;
  font-size: 36rpx;
