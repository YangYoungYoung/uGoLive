/* pages/commodity/commodity.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-view {
  width: 702rpx;
  height: 72rpx;
  background: rgba(229, 229, 229, 1);
  border-radius: 36rpx;
  line-height: 72rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.search-text {
  font-size: 32rpx;
  color: #919191;
  margin-left: 36rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 36rpx;
}

.commodity-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 88rpx;
}

.commodity-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 24rpx;
}

.commodity-icon {
  width: 136rpx;
  height: 136rpx;
  background-color: #eee;
}

.commodity-content {
  width: 453rpx;
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
}

.commodity-name {
  width: 100%;
  font-size: 24rpx;
  color: #313131;
  height: 108rpx;
}

.commodity-price {
  font-size: 24rpx;
  color: #e83d2c;
}

.commodity-btn {
  width: 108rpx;
  height: 49rpx;
  background: rgba(232, 61, 44, 1);
  border-radius: 8rpx;
  line-height: 49rpx;
  font-size: 24rpx;
  color: #fbfbfb;
  text-align: center;
}

.line {
  width: 100%;
  height: 1rpx;
  background: rgba(193, 193, 193, 1);
  margin-top: 24rpx;
}

.footer {
  width: 100%;
  height: 88rpx;
  background-color: #e83d2c;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
  position: fixed;
  bottom: 0;
}

.cancel-btn {
 width: 108rpx;
  height: 49rpx;
  border-radius: 8rpx;
  line-height: 49rpx;
  font-size: 24rpx;
  color: #fbfbfb;
  text-align: center;
  background: #919191;
}
